<body>
    <img border='0' src='//lh5.ggpht.com/_qgZA1ny_dAs/TM2UGNH7ORI/AAAAAAAAEuc/yRvKD_gAIg8/spiders.gif'
        style='position:fixed; top:0; left:0; color:black' />

    <h1>Scary Boo presents: </h1>
    <h2>An offer to die better...</h2>
    <div class="body-div">
        <div>

            <div id="public-info" class="white info">
                <h3>What you should know:</h3>
                <p>some public info goes here</p>
            </div>

            {{#if secretInfo}}

            {{else}}
            <div class="white info">
                <h3>Where and when?</h3>
                <p>Carrer de Dracula con Calle Embrujada,</p>
                <p> Numero 666
                    3 de Noviembre, 3:00am</p>
                <img class="gif" src="/images/giphy.webp" alt="">
            </div>
            {{/if}}


        </div>
        <div class="white">
            <span>Register You!</span>
            <form class="div-form" id="form" action="/signup" method="POST">
                <label for="name">NAME</label>
                <input type="text" name="name" placeholder="Your name">
                <label for="mail">EMAIL</label>
                <input type="email" name="mail" placeholder="Your email">
                <label for="city">CITY</label>
                <input type="text" name="city" placeholder="City">
                <label for="phone">PHONE</label>
                <input type="text" name="phone" placeholder="Your Phone">
                <button type="submit"> CREATE </button>
                {{#if errorMessage}}
                <div>{{ errorMessage }}</div>
                {{/if}}

            </form>
        </div>
    </div>

</body>